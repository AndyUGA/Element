<!DOCTYPE html>
<html>
<head>
    <% include reusableComponents/css.html %>
        <title>History</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"> History</a>
        <% include reusableComponents/navbar.html %>
    </nav>
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Points</th>
                    <th scope="col"> House </th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < historyResults.length; i++) { %>
                    <tr>
                        <td>
                            <%= historyResults[i].Name %>
                        </td>
                        <td>
                            <%= historyResults[i].Points %>
                        </td>
                        <td>
                            <%= historyResults[i].House %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
