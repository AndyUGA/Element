<!DOCTYPE html>
<html>
<head>
    <% include reusableComponents/css.html %>
</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid">
    <a class="navbar-brand" href="/"> Attendee Points</a>
    <% include reusableComponents/navbar.html %>
</nav>
<body>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Points</th>
                    <th scope="col"> House </th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < memberResults.length; i++) { %>
                    <tr class="attendeePoints">
                        <td>
                            <%= memberResults[i].Name %>
                        </td>
                        <td>
                            <%= memberResults[i].Points %>
                        </td>
                        <td>
                            <%= memberResults[i].House %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
