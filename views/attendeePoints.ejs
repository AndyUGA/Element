<!DOCTYPE html>
<html>
   <head>
      <% include reusableComponents/css.html %>
      <title>Attendee Points</title>
   </head>
   <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid">
      <a class="navbar-brand" href="/Element/attendeePoints"> Attendee Points</a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link" href="/Element/attendeeInfo"> Attendee Info</a></li>
            <li class="nav-item"><a class="nav-link" href="/">Check-In </a></li>
            <li class="nav-item"><a class="nav-link" href="/Element/history">History</a></li>
            <li class="nav-item"><a class="nav-link" href="/Element/housePoints">House Points</a></li>
            <li class="nav-item"><a class="nav-link" href="/Element/workshop"> Workshops </a></li>
         </ul>
      </div>
   </nav>
   <body>

  </div>
      <br>
      <form action="/Element/<%= searchType %>" method = "POST">
         <input type="text" placeholder=" Search Name" name="attendeeName">
         <button type="submit"><i class="fa fa-search"></i></button>
      </form>
      <br>
      <div class="dropdown show text-center">
  <a class="btn btn-primary dropdown-toggle"  role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter: <%= filterType %>
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <a class="dropdown-item" href="/Element/attendeePoints">All Houses</a>
    <a class="dropdown-item" href="/Element/attendeePointsGryffindor">Gryffindor</a>
    <a class="dropdown-item" href="/Element/attendeePointsHufflepuff">Hufflepuff</a>
    <a class="dropdown-item" href="/Element/attendeePointsRavenclaw">Ravenclaw</a>
    <a class="dropdown-item" href="/Element/attendeePointsSlytherin">Slytherin</a>
  </div>
</div>
<br>
      <div class="container h-100">
          <div class="column h-100 flex-column justify-content-center align-items-center">
            <% for(var i=0; i < memberResults.length; i++) { %>

              <div class="card shadow p-3 bg-white rounded pointCard  " style="width: 80%;">
                  <div class="card-body">
                      <p class = "text-center"> <%- i + 1%> </p>
                      <h5 class="card-title text-center">   <%= memberResults[i].Name %> </h5>
                      <p class="card-text text-center"> <%= memberResults[i].Points %> Points  </p>
                      <p class="card-text text-center"> <%= memberResults[i].House %> </p>
                  </div>
                  </div>
                  <br>
                  <% } %>

              </div>
          </div>

      </div>
   </body>
</html>
